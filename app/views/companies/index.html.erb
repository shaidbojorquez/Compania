<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<div class="media">
  <div class="media-body">
      <table class="table table-hover">
      <thead>
        <tr>
          <th>Comprador</th>
          <th>Descripcion</th>
          <th>Precioitem</th>
          <th>Totalitems</th>
          <th>Direccionvendedor</th>
          <th>Vendedor</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.comprador %></td>
            <td><%= company.descripcion %></td>
            <td><%= company.precioitem %></td>
            <td><%= company.totalitems %></td>
            <td><%= company.direccionvendedor %></td>
            <td><%= company.vendedor %></td>
            <td><%= link_to 'Show', company %></td>
            <td><%= link_to 'Edit', edit_company_path(company) %></td>
            <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<h3>Import Companies</h3>
<%= form_tag import_companies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Companies" %>
<% end %>

<%= link_to 'New Company', new_company_path %>
